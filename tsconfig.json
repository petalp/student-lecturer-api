{
  "extends": "@tsconfig/node24/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@auth/*": ["./src/Auth/*"],
      "@config/*": ["./src/config/*"],
      "@error/*": ["./src/error/*"],
      "@middleware/*": ["./src/middleware/*"],
      "@utils/*": ["./src/utils/*"],
      "@student/*": ["./src/students/*"]
    },
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": ["es2024", "ESNext.Array", "ESNext.Collection", "ESNext.Iterator", "ESNext.Promise"],
    "module": "nodenext",
    "target": "es2024",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution":"nodenext"
  },
  "include": ["src"],
  "exclude": ["src/generated", "dist", "node_modules"]
}
