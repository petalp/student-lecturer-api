{
  "extends": "@tsconfig/node24/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@auth/*": ["./src/Auth/*"],
      "@config/*": ["./src/config/*"],
      "@error/*": ["./src/error/*"],
      "@middleware/*": ["./src/middleware/*"],
      "@utils/*": ["./src/utils/*"],
      "@student/*": ["./src/students/*"]
    },
    "lib": [
      "es2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator",
      "ESNext.Promise"
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "nodenext",
    "target": "es2024",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
